.row
  .span4
    %a{:href => hero.html_url, :title => hero.name}
      = image_tag(hero.avatar_url, :alt => hero.login, :class => 'hero-shot')
  .span12
    %h1= hero.login
    .language.rank-block
      %span.descriptor= "Ruby"
      %span.rank= "#1024"
    .global.rank-block
      %span.descriptor= "Global"
      %span.rank= "#10242401"

.row
  .span16.bio
    - if hero.bio.present? && hero.bio.to_s != 'null'
      %p= hero.bio.html_safe
    %p= hero.auto_bio.html_safe

.row
  .span16.vote
    - unless current_hero.present?
      %a{:href => '/heroes/auth/github', :class => 'btn success large primary popup', 'data-height' => '400', 'data-width' => '600'}
        Login with GitHub to Vote!
    - else
      - if current_hero.has_voted_for?(@hero)
        %p.cast-vote
          Your vote for #{@hero.login} has been cast!
      - else
        = button_to 'Vote Now!', vote_hero_path(@hero), :class => 'btn success large primary', :remote => true
