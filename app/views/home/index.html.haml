- content_for :head_javascripts do
  :coffeescript
    if window.opener
      window.close()
      window.opener.heroes_controller.refreshSession()

%section#home-index
  .row#main-row
    .span16#header
      .header
        = image_tag 'githeroes-600x170.png'
        .blurb
          Vote for your hero on Github!
      .heroes
        = render :partial => 'heroes/list', :locals => { :heroes => @heroes }

      .nominate
        %a{:class => 'btn success large', :id => 'preview-muxx-reel', :href => '#'}
          Nominate your Own Hero!

